# Simplified Makefile for mock HTTP adapter

# Compiler settings
CXX = clang++
CXXFLAGS = -std=c++17 -Wall -Wextra

# Build the test program
all: mock_test

# Compile test program
mock_test: test_mock.cpp mock_http_adapter.cpp
	$(CXX) $(CXXFLAGS) -o $@ $^

# Clean up
clean:
	rm -f mock_test

.PHONY: all clean
